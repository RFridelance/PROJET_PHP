{# templates/event/list.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Liste des Événements{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Liste des Événements</h1>

        <div class="mb-3">
            <a class="btn btn-primary" href="{{ path('app_event_new') }}" role="button">Créer un événement</a>
        </div>

        <table class="table table-striped table-hover text-center">
            <thead>
            <tr>
                <th scope="col">Titre</th>
                <th scope="col">Description</th>
                <th scope="col">Date</th>
                <th scope="col">Nombre maximum de participants</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for event in events %}
                <tr>
                    <td>{{ event.title }}</td>
                    <td>{{ event.description }}</td>
                    <td>{{ event.date|date('d/m/Y H:i') }}</td>
                    <td>{{ event.getParticipantMax() }}</td>
                    <td>
                        <a class="btn btn-outline-dark btn-sm m-1" href="#">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {# Affichage de la pagination #}
        <div class="d-flex justify-content-center">
            {{ knp_pagination_render(events) }}
        </div>
    </div>
{% endblock %}
