{# templates/event/list.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Liste des Événements{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Liste des Événements</h1>

        <div class="mb-3">
            <a class="btn btn-primary" href="{{ path('app_event_new') }}" role="button">Créer un événement</a>
        </div>

        <table class="table table-striped table-hover text-center">
            <thead>
            <tr>
                <th scope="col">Titre</th>
                <th scope="col">Description</th>
                <th scope="col">Date</th>
                <th scope="col">Nombre maximum de participants</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for event in events %}
                <tr>
                    <td>{{ event.title }}</td>
                    <td>{{ event.description }}</td>
                    <td>{{ event.date|date('d/m/Y H:i') }}</td>
                    <td>{{ event.getParticipantMax() }}</td>
                    <td>
                        {# If connected user is the creator #}
                        {% if event.getCreator() == app.user %}
                            <form action="{{ path('app_event_delete', {'id': event.id}) }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet événement ?');">
                                <input type="hidden" name="_method" value="DELETE">
                                <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                                <a href="{{ path('app_event_edit', {'id': event.id}) }}" class="btn btn-primary btn-sm">Modifier</a>
                            </form>
                        {% endif %}

                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {# Affichage de la pagination #}
        <div class="d-flex justify-content-center">
            {{ knp_pagination_render(events) }}
        </div>
    </div>
{% endblock %}
