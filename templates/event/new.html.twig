{# templates/event/new.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Créer Événement{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Créer un nouvel événement</h1>

        {{ form_start(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.description) }}
        {{ form_row(form.date) }}
        {{ form_row(form.participant_max) }}
        {{ form_row(form.public) }}
        {{ form_row(form.save) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
